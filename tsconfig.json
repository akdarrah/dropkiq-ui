{
  "compilerOptions": {
    "target": "es5",
    "module":"CommonJS",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "exclude": [
    "demo",
    "spec",
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public",
    "dist",
    "jest.config.js",
    "gulpfile.js"
  ],
  "compileOnSave": false
}
